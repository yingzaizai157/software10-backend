    <update id="createTable">
        create table ${tableName} (
        <foreach collection="headers" item="columnName" separator=",">
            ${columnName} VARCHAR(255)
        </foreach>
        );
    </update>
    <insert id="insertRow">
        INSERT INTO ${tableName}
        VALUES
        <trim prefix="(" suffix=")" suffixOverrides=",">
