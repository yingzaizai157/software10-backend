<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cqupt.software_10.dao.NewCategoryMapper">


    <update id="removeNode">
        update software10.new_category set is_delete=1 where id = CAST(#{id} AS VARCHAR);
    </update>

    <select id="getLevel2Label" resultType="com.cqupt.software_10.entity.NewCategoryEntity">
        SELECT * FROM software10.new_category WHERE cat_level=2;
    </select>

    <select id="getLabelByPid" resultType="com.cqupt.software_10.entity.NewCategoryEntity">
        SELECT * FROM software10.new_category WHERE parent_id = #{pid};
    </select>

    <update id="updateTableNameByTableId">
        update software10.new_category set label=#{tableName}, status=#{tableStatus} where id = CAST(#{tableid} AS VARCHAR);;
    </update>

</mapper>